# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty  #i3-sensible-terminal
bindsym $mod+Shift+Return exec alacritty -e tmux -2
# start applications 
